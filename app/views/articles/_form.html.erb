<div class="container">
<%= render 'shared/errors', obj: @article %>
  <div class="row justify-content-center">
  <div class="col-10">
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true, data: { turbo: false }) do |f| %>
          <div class="form-group row p-3">
              <%= f.label :title, class: "col-2 col-form-label text-light"%>
              <div class="col-10">
              <%= f.text_field :title, placeholder: "Title of article", class: "form-control shadow rounded"%>
              </div>
          </div>

          <div class="form-group row p-3">
              <%=f.label  :description, class: "col-2 col-form-label text-light"%>
              <div class="col-10">
              <%= f.text_area :description, rows: 10, placeholder: "Description of article", class: "form-control shadow rounded"%>
              </div>
          </div>
        <div class="form-group d-flex justify-content-center p-3">
          <%= f.submit class: "btn btn-outline-light btn-lg"%>
        </div>
  <%end%>
</div class="mb-4">
    <%= link_to '[ Cancel and return to articles path ]', articles_path(@article), class: "d-flex justify-content-center text-info" %>
  </div>
</div>